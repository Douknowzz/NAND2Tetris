/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Or(a= a, b= sel, out= w1);
    And(a= b, b= sel, out= w2);
    
    Xor(a = w1, b = sel, out = ww1);
    Xor(a = w2, b = sel, out = ww2);

    Or(a= ww1, b= ww2, out= o);
    Xor(a = sel, b = o, out = out);
}